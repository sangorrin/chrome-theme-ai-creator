{
  "manifest_version": 2,
  "name": "Chrome Theme AI Creator",
  "version": "1.0",
  "description": "A web application for generating and customizing Chrome themes using AI.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "theme": {
    "colors": {
      "frame": "#ffffff",
      "toolbar": "#ffffff",
      "tab_text": "#000000",
      "background_tab": "#f0f0f0",
      "bookmark_text": "#000000",
      "button_background": "#e0e0e0"
    },
    "tints": {
      "buttons": {
        "normal": "#e0e0e0",
        "hover": "#d0d0d0"
      }
    }
  },
  "permissions": [
    "storage"
  ]
}